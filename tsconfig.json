{
  "compilerOptions": {
    "target": "es6",
    "preserveConstEnums": true,
    "lib": ["es6"],
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
}
